    <Button
        android:id="@+id/btn_ReadDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSQLiteDatabase"
        android:text="Display Database" />

    <Button
        android:id="@+id/btn_UpdateDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSQLiteDatabase"
        android:text="Update Database" />

    <Button
        android:id="@+id/btn_DestroyDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSQLiteDatabase"
        android:text="Destroy Database" />

    <Button
        android:id="@+id/btn_DisplayImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSQLiteDatabase"
        android:text="Display Images" />

    <!--////////////////-->

