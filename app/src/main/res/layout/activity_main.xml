        android:onClick="onAddString"
        android:text="Add String" />

    <!--read and write to fileIn-->
    <EditText
        android:id="@+id/et_File"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message to File" />

    <Button
        android:id="@+id/btn_WriteFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onWriteToFile"
        android:text="Write to File" />

    <Button
        android:id="@+id/btn_ReadFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onReadToFile"
        android:text="Read File" />

    <TextView
